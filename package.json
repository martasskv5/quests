{
    "name": "quests",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "github-build": "ng build --base-href /quests/ --output-path docs",
        "seed:firestore:emulator": "set FIRESTORE_EMULATOR_HOST=localhost:8080 && set GCLOUD_PROJECT=martas-appslab-quests && node scripts/seed-firestore.js --file db.json --subcollections",
        "seed:firestore:prod": "node scripts/seed-firestore.js --file db.json --key ./service-account.json --subcollections"
    },
    "prettier": {
        "printWidth": 100,
        "singleQuote": true,
        "overrides": [
            {
                "files": "*.html",
                "options": {
                    "parser": "angular"
                }
            }
        ]
    },
    "private": true,
    "dependencies": {
        "@angular/common": "^21.0.1",
        "@angular/compiler": "^21.0.1",
        "@angular/core": "^21.0.1",
        "@angular/fire": "^20.0.1",
        "@angular/forms": "^21.0.1",
        "@angular/platform-browser": "^21.0.1",
        "@angular/router": "^21.0.1",
        "angular-cli-ghpages": "^2.0.3",
        "rxjs": "~7.8.0",
        "tslib": "^2.8.1",
        "zone.js": "~0.15.0"
    },
    "devDependencies": {
        "@angular/build": "^21.0.1",
        "@angular/cli": "^21.0.1",
        "@angular/compiler-cli": "^21.0.1",
        "@types/jasmine": "~5.1.0",
        "firebase-admin": "^13.6.0",
        "jasmine-core": "~5.9.0",
        "karma": "~6.4.0",
        "karma-chrome-launcher": "~3.2.0",
        "karma-coverage": "~2.2.0",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.1.0",
        "semver": "^7.7.2",
        "typescript": "~5.9.2",
        "uuid": "^13.0.0"
    }
}
